<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 		 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="easypan.mappers.FileShareMapper">

	<!--实体映射	-->
	<resultMap id="base_result_map" type="easypan.entity.po.FileShare">
	<!-- 分享ID -->
	<id column="share_id" property="shareId"/> 
	<!-- 文件ID -->
	<result column="file_id" property="fileId"/> 
	<!-- 分享人ID -->
	<result column="user_id" property="userId"/> 
	<!-- 有效期类型 0:1天 1:7天 2:30天 4:永久有效 -->
	<result column="valid_type" property="validType"/> 
	<!-- 失效时间 -->
	<result column="expire_time" property="expireTime"/> 
	<!-- 分享时间 -->
	<result column="share_time" property="shareTime"/> 
	<!-- 提取码 -->
	<result column="code" property="code"/> 
	<!-- 浏览次数 -->
	<result column="view_count" property="viewCount"/>
	<!-- 文件名称 -->
	<result column="file_name" property="fileName"/>
	<!-- 文件封面 -->
	<result column="file_cover" property="fileCover"/>
	<!-- 0:文件 1:目录 -->
	<result column="folder_type" property="folderType"/>
	<!-- 文件分类 1:视频 2:音频 3:图片 4:文档 5:其他 -->
	<result column="file_category" property="fileCategory"/>
	<!-- 1:视频 2:音频 3:图片 4:pdf 5:doc 6:excel 7:txt 8:code 9:zip 10:其他 -->
	<result column="file_type" property="fileType"/>
	</resultMap>
	<!--通用查询列	-->
	<sql id="base_column_list">
		share_id,file_share.file_id,file_share.user_id,valid_type,expire_time,share_time,code,view_count
	</sql>

	<!--基础查询条件	-->
	<sql id="base_query_condition">
		<if test="query.shareId !=null and query.shareId!=''">
			and share_id=#{query.shareId}
		</if>
		<if test="query.fileId !=null and query.fileId!=''">
			and file_share.file_id=#{query.fileId}
		</if>
		<if test="query.userId !=null and query.userId!=''">
			and file_share.user_id=#{query.userId}
		</if>
		<if test="query.validType !=null">
			and valid_type=#{query.validType}
		</if>
		<if test="query.expireTime !=null">
			and expire_time=#{query.expireTime}
		</if>
		<if test="query.shareTime !=null">
			and share_time=#{query.shareTime}
		</if>
		<if test="query.code !=null and query.code!=''">
			and code=#{query.code}
		</if>
		<if test="query.viewCount !=null">
			and view_count=#{query.viewCount}
		</if>
	</sql>
	<!--扩展查询条件	-->
	<sql id="base_query_condition_extend">
		<if test="query.shareIdFuzzy !=null and query.shareIdFuzzy !=''">
			and share_id like concat('%',#{query.shareIdFuzzy}, '%')
		</if>
		<if test="query.fileIdFuzzy !=null and query.fileIdFuzzy !=''">
			and file_share.file_id like concat('%',#{query.fileIdFuzzy}, '%')
		</if>
		<if test="query.userIdFuzzy !=null and query.userIdFuzzy !=''">
			and file_share.user_id like concat('%',#{query.userIdFuzzy}, '%')
		</if>
		<if test="query.expireTimeStart !=null and query.expireTimeStart !=''">
			<![CDATA[ and expire_time >=str_to_date(#{query.expireTimeStart},'%Y-%m-%d') ]]>
		</if>
		<if test="query.expireTimeEnd !=null and query.expireTimeEnd !=''">
			<![CDATA[ and expire_time < date_sub(str_to_date(#{query.expireTimeEnd},'%Y-%m-%d'),interval -1 day) ]]>
		</if>
		<if test="query.shareTimeStart !=null and query.shareTimeStart !=''">
			<![CDATA[ and share_time >=str_to_date(#{query.shareTimeStart},'%Y-%m-%d') ]]>
		</if>
		<if test="query.shareTimeEnd !=null and query.shareTimeEnd !=''">
			<![CDATA[ and share_time < date_sub(str_to_date(#{query.shareTimeEnd},'%Y-%m-%d'),interval -1 day) ]]>
		</if>
		<if test="query.codeFuzzy !=null and query.codeFuzzy !=''">
			and code like concat('%',#{query.codeFuzzy}, '%')
		</if>
	</sql>
	<!--通用查询条件	-->
	<sql id="query_condition">
		<where>
			<include refid="base_query_condition"/>
			<include refid="base_query_condition_extend"/>
		</where>
	</sql>
	<!--查询列表-->
	<select id="selectList" resultMap="base_result_map">
		SELECT <include refid="base_column_list"/>
		    <if test="query.queryFileName!=null and query.queryFileName">
				,file_info.file_name,file_info.folder_type,file_info.file_category,file_info.file_type,file_info.file_cover
			</if>
		    FROM file_share
		        <if test="query.queryFileName!=null and query.queryFileName">
					LEFT JOIN file_info ON file_share.file_id = file_info.file_id and  file_info.user_id = #{query.userId}
				</if>
		        <include refid="query_condition"/>
		<if test="query.orderBy!=null">order by ${query.orderby}</if>
		<if test="query.simplePage!=null">limit #{query.simplePage.start},#{query.simplePage.end}</if>
	</select>

	<!--查询数量-->
	<select id="selectCount" resultType="java.lang.Integer">
		SELECT count(1) FROM file_share <include refid="query_condition"/>
	</select>

	<!--插入(匹配有值的数段)-->
	<insert id="insert" parameterType="easypan.entity.po.FileShare">

		INSERT INTO file_share
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.shareId !=null">
				share_id,
			</if>
			<if test="bean.fileId !=null">
				file_id,
			</if>
			<if test="bean.userId !=null">
				user_id,
			</if>
			<if test="bean.validType !=null">
				valid_type,
			</if>
			<if test="bean.expireTime !=null">
				expire_time,
			</if>
			<if test="bean.shareTime !=null">
				share_time,
			</if>
			<if test="bean.code !=null">
				code,
			</if>
			<if test="bean.viewCount !=null">
				view_count,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.shareId !=null">
				#{bean.shareId},
			</if>
			<if test="bean.fileId !=null">
				#{bean.fileId},
			</if>
			<if test="bean.userId !=null">
				#{bean.userId},
			</if>
			<if test="bean.validType !=null">
				#{bean.validType},
			</if>
			<if test="bean.expireTime !=null">
				#{bean.expireTime},
			</if>
			<if test="bean.shareTime !=null">
				#{bean.shareTime},
			</if>
			<if test="bean.code !=null">
				#{bean.code},
			</if>
			<if test="bean.viewCount !=null">
				#{bean.viewCount},
			</if>
		</trim>
	</insert>

	<!--插入或更新(匹配有值的数段)存在问题：对于DUPLICATE KEY UPDATE不管插入还是修改都会引入自增增长-->
	<insert id="insertOrUpdate" parameterType="easypan.entity.po.FileShare">
		INSERT INTO file_share
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.shareId !=null">
				share_id,
			</if>
			<if test="bean.fileId !=null">
				file_id,
			</if>
			<if test="bean.userId !=null">
				user_id,
			</if>
			<if test="bean.validType !=null">
				valid_type,
			</if>
			<if test="bean.expireTime !=null">
				expire_time,
			</if>
			<if test="bean.shareTime !=null">
				share_time,
			</if>
			<if test="bean.code !=null">
				code,
			</if>
			<if test="bean.viewCount !=null">
				view_count,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.shareId !=null">
				#{bean.shareId},
			</if>
			<if test="bean.fileId !=null">
				#{bean.fileId},
			</if>
			<if test="bean.userId !=null">
				#{bean.userId},
			</if>
			<if test="bean.validType !=null">
				#{bean.validType},
			</if>
			<if test="bean.expireTime !=null">
				#{bean.expireTime},
			</if>
			<if test="bean.shareTime !=null">
				#{bean.shareTime},
			</if>
			<if test="bean.code !=null">
				#{bean.code},
			</if>
			<if test="bean.viewCount !=null">
				#{bean.viewCount},
			</if>
		</trim>
		ON DUPLICATE KEY UPDATE
		<trim prefix="" suffix="" suffixOverrides=",">
			<if test="bean.fileId !=null">
				file_id =VALUES(file_id),
			</if>
			<if test="bean.userId !=null">
				user_id =VALUES(user_id),
			</if>
			<if test="bean.validType !=null">
				valid_type =VALUES(valid_type),
			</if>
			<if test="bean.expireTime !=null">
				expire_time =VALUES(expire_time),
			</if>
			<if test="bean.shareTime !=null">
				share_time =VALUES(share_time),
			</if>
			<if test="bean.code !=null">
				code =VALUES(code),
			</if>
			<if test="bean.viewCount !=null">
				view_count =VALUES(view_count),
			</if>
		</trim>
	</insert>

	<!--批量插入-->
	<insert id="insertBatch" parameterType="easypan.entity.po.FileShare">
		INSERT INTO file_share (share_id,file_id,user_id,valid_type,expire_time,share_time,code,view_count)VALUES
		<foreach collection="list" item="item" separator=",">
			(#{item.shareId},#{item.fileId},#{item.userId},#{item.validType},#{item.expireTime},#{item.shareTime},#{item.code},#{item.viewCount})
		</foreach>
	</insert>

	<!--批量插入或更新-->
	<insert id="insertOrUpdateBatch" parameterType="easypan.entity.po.FileShare">
		INSERT INTO file_share (share_id,file_id,user_id,valid_type,expire_time,share_time,code,view_count)VALUES
		<foreach collection="list" item="item" separator=",">
			(#{item.shareId},#{item.fileId},#{item.userId},#{item.validType},#{item.expireTime},#{item.shareTime},#{item.code},#{item.viewCount})
		</foreach>
		ON DUPLICATE KEY UPDATE share_id = VALUES(share_id),file_id = VALUES(file_id),user_id = VALUES(user_id),valid_type = VALUES(valid_type),expire_time = VALUES(expire_time),share_time = VALUES(share_time),code = VALUES(code),view_count = VALUES(view_count)
	</insert>

	<!--根据索引查询、更新、删除-->
	<!--根据ShareId查询-->
	<select id="selectByShareId" resultMap="base_result_map">
		select <include refid="base_column_list"/> from file_share where share_id=#{shareId}
	</select>

	<!--根据ShareId更新-->
	<update id="updateByShareId" parameterType="easypan.entity.po.FileShare">
		update file_share
		<set>
			<if test="bean.shareId!=null">
			share_id=#{bean.shareId},
			</if>
			<if test="bean.fileId!=null">
			file_id=#{bean.fileId},
			</if>
			<if test="bean.userId!=null">
			user_id=#{bean.userId},
			</if>
			<if test="bean.validType!=null">
			valid_type=#{bean.validType},
			</if>
			<if test="bean.expireTime!=null">
			expire_time=#{bean.expireTime},
			</if>
			<if test="bean.shareTime!=null">
			share_time=#{bean.shareTime},
			</if>
			<if test="bean.code!=null">
			code=#{bean.code},
			</if>
			<if test="bean.viewCount!=null">
			view_count=#{bean.viewCount},
			</if>
		</set>
		where share_id=#{shareId}
	</update>

	<!--根据ShareId删除-->
	<delete id="deleteByShareId">
		delete from file_share where share_id=#{shareId}
	</delete>

	<delete id="deleteFileShareBatch">
		delete
		from file_share
		where user_id =#{userId}
		and share_id in (<foreach collection="shareIds" item="item" separator="," >#{item}</foreach>)
	</delete>

	<update id="updateViewShareCount">
		update file_share
		set view_count=view_count+1
		where share_id=#{shareId}
	</update>
</mapper>